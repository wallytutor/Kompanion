{
  // No update and ignore all extension proposals:
  "update.mode": "none",
  "extensions.ignoreRecommendations": true,

  // Do not open the previous sessions by default:
  // These are not working yet, waiting for solution!
  // https://github.com/Microsoft/vscode/issues/22613
  "window.restoreWindows": "none",
  "files.hotExit": "off",

  // On startup do not show anything:
  "workbench.startupEditor": "none",

  // Do not expand file tree for the current file path and make tree
  // levels more readable when expanded:
  "explorer.autoReveal": false,
  "workbench.tree.indent": 12,

  // Use the Julia theme:
  "workbench.colorTheme": "Julia (Monokai Vibrant)",

  // Do not display minimap on side of document:
  "editor.minimap.enabled": false,

  // Add a clearly visible ruler (language dependent position):
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#ff4081"
  },

  // Do not ask for confirmation when pasting multiple lines:
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  // XXX: I don't remember why I added this!
  "terminal.integrated.commandsToSkipShell": [
      "language-julia.interrupt"
  ],

  // Configure Git:
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  //-------------------------------------------------------------------------
  // REWRAP
  //-------------------------------------------------------------------------

  "rewrap.doubleSentenceSpacing": true,

  //-------------------------------------------------------------------------
  // LANGUAGE SPECIFIC
  //-------------------------------------------------------------------------

  "julia.symbolCacheDownload": true,
  "julia.enableTelemetry": false,
  "python.createEnvironment.trigger": "off",

  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,

  "editor.rulers": [72, 79],

  "[python]": {},

  "[octave]": {},

  "[julia]": {},

  "[latex]": {
    "editor.tabSize": 2,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "rewrap.autoWrap.enabled": false
  },

  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "rewrap.autoWrap.enabled": false
  },
  
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  //-------------------------------------------------------------------------
  // LATEX-WORKSHOP
  //-------------------------------------------------------------------------

  "latex-workshop.latex.recipes": [
    {
      "name": "kompanion-bare-pdflatex",
      "tools": [
        "pdflatex",
        "pdflatex"
      ]
    },
    {
      "name": "kompanion-pdflatex-bibtex",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    },
    {
      "name": "kompanion-xelatex-bibtex",
      "tools": [
        "xelatex",
        "xelatex",
        "bibtex",
        "xelatex",
        "bibtex",
        "xelatex"
      ]
    },
    {
      "name": "kompanion-xelatex-biber",
      "tools": [
        "xelatex",
        "xelatex",
        "biber",
        "xelatex",
        "biber",
        "xelatex"
      ]
    }
  ],

  "latex-workshop.latex.tools": [
      {
        "name": "pdflatex",
        "command": "pdflatex",
        "args": [
          "-shell-escape",
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "%DOC%.tex"
        ]
      },
      {
        "name": "xelatex",
        "command": "xelatex",
        "args": [
          "-shell-escape",
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "%DOC%.tex"
        ]
      },
      {
        "name": "bibtex",
        "command": "bibtex",
        "args": [
          "%DOC%"
        ]
      },
      {
        "name": "biber",
        "command": "biber",
        "args": [
          "%DOC%"
        ]
      }
  ],

  //-------------------------------------------------------------------------
  // OPENFOAM
  //-------------------------------------------------------------------------

  // "files.associations": {
